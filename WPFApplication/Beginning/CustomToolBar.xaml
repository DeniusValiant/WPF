<UserControl x:Class="Beginning.CustomToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Beginning"
             mc:Ignorable="d">
    <Grid>
        <DockPanel Height="25" LastChildFill="False"  VerticalAlignment="Top">
            <ToolBarTray HorizontalAlignment="Stretch">
                <ToolBar HorizontalAlignment="Stretch" >
                    <Button Name="btnNew" Content="New" Height="25" Width="50"/>
                    <Button Name="btnEdit" Content="Edit" Height="25" Width="50"/>
                    <Separator />
                    <Button Name="btnDelete" Content="Delete" Height="25" Width="50"/>
                </ToolBar>
            </ToolBarTray>
        </DockPanel>

    </Grid>
</UserControl>
